<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Download App</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f0f2f5;
            color: #333;
            text-align: center;
        }
        .container {
            max-width: 400px;
            margin: 50px auto;
            background-color: #fff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .download-btn {
            display: block;
            width: 100%;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 50px;
            padding: 15px 0;
            font-size: 1.2em;
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .download-btn:hover {
            background-color: #218838;
        }
        .info-text {
            margin-top: 20px;
            font-size: 1em;
            color: #666;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Download bereit</h1>
        <p class="info-text">Dr√ºcke auf den Button, um die Installation deiner App zu starten.</p>
        <a href="#" id="download-link" class="download-btn">App herunterladen</a>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const params = new URLSearchParams(window.location.search);
            const appId = params.get('appId');
            const downloadLinkElement = document.getElementById("download-link");

            if (!appId) {
                downloadLinkElement.innerText = "Fehler: App-ID fehlt.";
                return;
            }

            const sourceUrl = "https://raw.githubusercontent.com/Ihaveadream19/xalostore/40b870002c0e3f42e2a92a68629c8623a36819b7/source.json";

            fetch(sourceUrl)
                .then(response => response.json())
                .then(data => {
                    const foundApp = data.apps.find(app => app.bundleIdentifier === appId);
                    if (foundApp && foundApp.versions[0]?.downloadURL) {
                        downloadLinkElement.href = foundApp.versions[0].downloadURL;
                    } else {
                        downloadLinkElement.innerText = "Fehler: Download-Link nicht gefunden.";
                        downloadLinkElement.href = "#";
                    }
                })
                .catch(error => {
                    console.error("Fehler beim Laden der Apps:", error);
                    downloadLinkElement.innerText = "Fehler beim Laden der App-Daten.";
                    downloadLinkElement.href = "#";
                });
        });
    </script>
</body>
</html>
